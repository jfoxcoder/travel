@model Travel.Web.Models.Country

@Html.AdminBreadcrumbs("Create Country", "Countries", "AdminCountriesHome");

<header class="row admin-header">
    <h2>Create Country</h2>
</header>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "alert" })

    <div class="row">
        <div class="small-8 small-centered">

            @* Name *@
            <div class="row">
                <div class="small-4 columns">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "right inline" })
                </div>
                <div class="small-8 columns">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "", @list = "country-list", @autofocus=true } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "alert" })

                    @Html.Partial("~/Views/Shared/_CountriesDataList.cshtml")
                </div>
            </div>

            @* IsoCode *@
            <div class="row">
                <div class="small-4 columns">
                    @Html.LabelFor(model => model.IsoCode, htmlAttributes: new { @class = "right inline" })
                </div>
                <div class="small-8 columns">
                    @Html.EditorFor(model => model.IsoCode, new { htmlAttributes = new { @class = "", @list = "iso-code-list" } })
                    @Html.ValidationMessageFor(model => model.IsoCode, "", new { @class = "alert" })

                    @Html.Partial("~/Views/Shared/_IsoCodesDataList.cshtml")
                </div>
            </div>

            @* Submit *@
            <div class="row">
                <div class="small-8 small-offset-4 columns">
                    <button type="submit" value="Create" class="button success"><span class="icon-add"></span> Create</button>
                </div>
            </div>
        </div>
    </div>
}

<div class="row push-footer-down">
    @Html.BackLink("Countries", "AdminCountriesHome")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/country-form")
}