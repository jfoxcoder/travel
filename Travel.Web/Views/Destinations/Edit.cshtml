@model Travel.Web.Models.Destination

@Html.AdminBreadcrumbs("Edit " + @Model.Name, "Destinations", "AdminDestinationsHome")

<div class="row">
    <h2>@Model.Name</h2>
</div>

<div class="row push-footer-down">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        
          
            @Html.ValidationSummary(true, "", new { @class = "danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="row">
                @Html.LabelFor(model => model.Name, "Destination Name", htmlAttributes: new { @class = " medium-2 columns" })
                <div class="medium-10 columns" >
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "", @autofocus=true } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "" })

                </div>
            </div>

            <div class="row">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "medium-2 columns" })
                <div class="medium-10 columns">
                    @Html.TextAreaFor(model => model.Description, new { @class = "", @rows = "10" })

                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "" })
                </div>
            </div>

            <div class="row">
                @Html.LabelFor(model => model.CountryId, "Country", htmlAttributes: new { @class = " medium-2 columns" })
                <div class="medium-10 columns">
                    @Html.DropDownList("CountryId", null, htmlAttributes: new { @class = "" })
                    @Html.ValidationMessageFor(model => model.CountryId, "", new { @class = "" })
                </div>
            </div>

            <div class="row">
                <div class="medium-10 medium-offset-2 columns" >
                    <button type="submit" value="Save" class="button success"><span class="icon-save"></span> Save</button>

                </div>
            </div>
       
    }



    @Html.BackLink("Destinations", "AdminDestinationsHome")

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
