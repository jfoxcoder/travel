@model Travel.Web.Models.Destination

@Html.AdminBreadcrumbs("Create Destination", "Destinations", "AdminDestinationsHome");

<header class="row admin-header">
    <h2>Create Destination</h2>
</header>

<div class="row push-footer-down">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true, "", new { @class = "alert" })

    <div class="row">



        @Html.LabelFor(model => model.CountryId, "Country", htmlAttributes: new { @class = " medium-2 columns" })

        <div class="medium-10 columns">
            @Html.DropDownList("CountryId", null, htmlAttributes: new { @class = "" })
            @Html.ValidationMessageFor(model => model.CountryId, "", new { @class = "alert" })
        </div>
    </div>


    <div class="row">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = " medium-2 columns" })
        <div class="medium-10 columns">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "", @autofocus=true } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "danger" })
        </div>
    </div>

    <div class="row">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = " medium-2 columns" })
        <div class="medium-10 columns">
            @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "danger" })
        </div>
    </div>


        <div class="row">
            <div class="medium-offset-2 medium-10 columns">
                <button type="submit" value="Create" class="button success"><span class="icon-add"></span> Create</button>
            </div>
        </div>

    }

    @Html.BackLink("Destinations", "AdminDestinationsHome")

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
